.show-errors{
    position: fixed;
    bottom: 20px;
    right: 20px;
    min-width: 250px;
    max-width: 350px;
    height: auto;
    z-index: 10000;
    background: rgba(139, 0, 0, 0.77);
    border-radius: 5px;
    display: none;
    padding: 10px 5px;
}

.error-msg{
    color: #e2dede;
    margin: 5px 10px;
    padding: 3px 5px;
    border-radius: 5px;
}

.hide-errors{
    position: absolute;
    top: 0px;
    right: 0px;
    background: white;
    color: red;
    padding: 0px 5px;
    cursor: pointer;
}

